<div class="row pt-3 w-75 m-auto text-center">
    <form method="post" action="/usuario/editar">
        <fieldset>
            <div class="row p-3">
                <div class="col text-start">
                    <label for="nome" class="form-label">Nome</label>
                    <input type="text" class="form-control" name="nome">
                </div>
                <div class="col text-start">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="exemplo@gmail.com">
                </div>
            </div>
            <div class="row text-center mt-3 mb-3">
                <button type="submit" class="btn btn-outline-success m-auto w-auto">Salvar Alterações</button>
            </div>
        </fieldset>
    </form>
</div>