<div class="col-10 mt-4 shadow mx-auto border border-bottom-0 p-3 rounded-3">
    <div class="row justify-content-end pb-3 pt-3">
        <h3 class="text-bg-primary p-3 rounded-3">Categorias</h3>
        <a class="col-1" href="/categoria/cadastro" style="text-decoration: none; color:#0d6efd; font-size:25px"><i
                class="bi bi-plus-square-fill"></i></a>
    </div>
    <table class="table table-striped-columns">
        <thead>
            <tr>
                <th>Nome</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each categorias}}
            <tr>
                <td>{{nome}}</td>
                <td>
                    <a href="/categoria/editar/{{id}}" class="p-2" style="text-decoration: none;"><i
                            class="bi bi-pencil-square" style="color: #0d6efd;"></i></a>
                    <a href="/categoria/excluir/{{id}}" onclick="return confirm('Tem certeza que deseja excluir?');"
                        class="p-2" style="text-decoration: none;"><i class="bi bi-trash-fill"
                            style="color: #dc3545;"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>