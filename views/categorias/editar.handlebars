<div class="container-md border p-4 mt-4">
    <form action="/categoria/atualizar/{{categoria.id}}" method="post" class="col-8 m-auto w-50">
        <legend style="color: black; font-size: 26px">Editar Categoria</legend>
        <label style="color: #0d6efd; font-size: 22px">Nome</label>
        <input type="text" required name="nome" class="form-control" value="{{categoria.nome}}">
        <br>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>