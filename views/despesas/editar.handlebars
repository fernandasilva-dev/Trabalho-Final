<div class="container-md border p-4 mt-4">
    <form action="/despesa/editar/{{despesa.id}}" method="post" class="col-8 m-auto w-50">
        <legend style="color: black; font-size: 26px">Editar Despesas</legend>
        <label style="color: #0d6efd; font-size: 22px">Descrição</label>
        <input type="text" required name="descricao" class="form-control" value="{{despesa.descricao}}">
        <label style="color: #0d6efd; font-size: 22px">Valor</label>
        <input type="number" required name="valor" class="form-control" value="{{despesa.valor}}">
        <br>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>