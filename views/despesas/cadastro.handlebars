<div class="container-md border p-4 mt-4">

    <form action="/despesa/salvar" method="post" class="col-8 m-auto w-50">
        <legend style="color: black; font-size: 26px">Cadastrar Receitas</legend>
        <label style="color: #0d6efd; font-size: 22px">Descrição</label>
        <input type="text" id="descricao" required name="descricao" class="form-control">
        <label style="color: #0d6efd; font-size: 22px">Valor</label>
        <input type="number" id="valor" required name="valor" class="form-control">
        <br>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>