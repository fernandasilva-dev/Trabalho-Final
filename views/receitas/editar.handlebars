<div class="container-md border p-4 mt-4">

    <form action="/receita/atualizar/{{receita.id}}" method="post" class="col-8 m-auto w-50">
        <legend style="color: black; font-size: 26px">Editar Receitas</legend>
        <label style="color: #0d6efd; font-size: 22px">Descrição</label>
        <input type="text" required name="descricao" class="form-control" value="{{receita.descricao}}">
        <label style="color: #0d6efd; font-size: 22px">Valor</label>
        <input type="number" required name="valor" class="form-control" value="{{receita.valor}}">
        <label style="color: #0d6efd; font-size: 22px">Categoria</label>
        <select name="categoria_id" class="form-control">
            {{#each categorias}}
                <option value="{{id}}">{{nome}}</option>
            {{/each}}
        </select>
        <br>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>